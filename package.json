{
  "name": "astral-money",
  "version": "1.0.0",
  "description": "Ultimate Budget Tracker 2025 - Professional financial management application",
  "main": "ultimate-enhanced-astral-budget-2025.html",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "npm run test:ci && npm run test:e2e",
    "serve": "serve .",
    "deploy": "node scripts/deploy.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:seed": "node prisma/seed.js",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "vercel:deploy": "vercel --prod",
    "postinstall": "prisma generate || echo 'Prisma generation skipped - DATABASE_URL not configured'"
  },
  "keywords": [
    "budget",
    "tracker",
    "finance",
    "money",
    "dashboard",
    "analytics",
    "financial-health",
    "bills",
    "expenses",
    "income"
  ],
  "author": "Astral Money Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/username/astral-money.git"
  },
  "bugs": {
    "url": "https://github.com/username/astral-money/issues"
  },
  "homepage": "https://github.com/username/astral-money#readme",
  "dependencies": {
    "@auth/prisma-adapter": "^2.10.0",
    "@prisma/client": "^5.0.0",
    "bcryptjs": "^3.0.2",
    "jsonwebtoken": "^9.0.2",
    "next": "^14.0.0",
    "next-auth": "^4.24.11",
    "prisma": "^5.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "msw": "^2.11.3",
    "serve": "^14.0.0",
    "ts-jest": "^29.4.4",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
