{
  "framework": "nextjs",
  "installCommand": "npm install && (npx prisma generate || echo 'Prisma generation skipped - DATABASE_URL not configured')",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}